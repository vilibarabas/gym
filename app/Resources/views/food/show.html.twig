{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block content %}
    <h1>Food</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ food.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ food.name }}</td>
            </tr>
            <tr>
                <th>Calories</th>
                <td>{{ food.calories }}</td>
            </tr>
            <tr>
                <th>Fat</th>
                <td>{{ food.fat }}</td>
            </tr>
            <tr>
                <th>Protein</th>
                <td>{{ food.protein }}</td>
            </tr>
            <tr>
                <th>Carbo</th>
                <td>{{ food.carbo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_food_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_food_edit', { 'id': food.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
