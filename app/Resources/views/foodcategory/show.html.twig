{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block content %}
    <h1>Foodcategory</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ foodCategory.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ foodCategory.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_foodcategory_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_foodcategory_edit', { 'id': foodCategory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
