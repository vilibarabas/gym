{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}

    <div id="content-block">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <strong>User</strong>
                    <span> {{ user.username }} </span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <h3>Life Styles: </h3>
                </div>
            </div>
            {% for style in personalProgram.lifeStyle %}
                <div class="row">
                    <div class="col-md-5">
                        {% if style.lifeStyleSelect %}
                            <strong> {{ style.lifeStyleSelect.title }} : </strong>
                            <span> {{ style.lifeStyleSelect.data  }}</span>
                        {% else %}
                            <h2> {{style.foods|first.category.name}}</h2>
                            <ul>
                            {% for food in style.foods %}
                                <li> - {{  food.name }}</li>
                            {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
