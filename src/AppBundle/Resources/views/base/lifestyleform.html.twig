{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/food_preferences.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/app/css/jquery.progressbar.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="row">
        {% include 'AppBundle::base/progressbar.html.twig' %}
    </div>
    <div class="row">
        <div id="content-block" class="col-md-12">
            <div class="">
                {{ form_start(form) }}
                <div class=" lifestyle-title">
                    <h1 class=""> <strong>{{ title }} </strong></h1>
                </div>
                <hr>
                {{ form_widget(form) }}
                <hr>
                <div class="custom-btn">
                {% if back %}
                    <a class="btn btn-lg btn-danger" href="{{ back }}"> Back</a>
                {% endif %}
                {% if not end %}
                    <input class="btn btn-lg btn-danger" type="submit" value="Next" />
                {% else %}
                    <input class="btn btn-lg btn-danger" type="submit" value="Finish" />
                {% endif %}
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/jquery.progressbar.js') }}"></script>

    <script>

    </script>


{% endblock %}
