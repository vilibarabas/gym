{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/food_preferences.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div id="content-block">
        <div class="container">

            {% if user == null %}
            <div class="row">
                <p>Pentru programul personalizat te rog sa te <a class="btn btn-lg btn-success" href="{{ path('fos_user_security_login') }}"> autentifici</a></p>
            </div>
            {% else %}
            <div class="row">
                {{ form_start(form) }}
                <div class="row">
                    <h1>Select payment</h1>
                </div>
                {{ form_widget(form) }}

                <input class="btn btn-lg btn-success" type="submit" value="Submit" />

            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
